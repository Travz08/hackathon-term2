<div class="container">
  <div class="row align-items-center">
  <div class="col-md-4 mx-auto">

<%= form_with(model: puppy, local: true) do |form| %>
  <% if puppy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(puppy.errors.count, "error") %> prohibited this puppy from being saved:</h2>

      <ul>
      <% puppy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row center text-black">
  <div class="field">
    <br>
    <%= form.file_field :image, id: :puppy_image, class: "form-control" %>
    </br>
  </div>
  </div>

  <div class="form-group">
    <p><%= form.text_field :name, id: :puppy_name, placeholder: 'Dog name', class: "form-control" %></p>
  </div>

  <div class="form-group">
    <p><%= form.text_field :age, id: :puppy_age, placeholder: 'Age', class: "form-control" %></p>
  </div>

  <div class="form-group">
    <%= form.text_field :breed, id: :puppy_breed, placeholder: 'Breed', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :size, id: :puppy_size, placeholder: 'Size', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :gender, id: :puppy_gender, placeholder: 'Gender', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :bio, id: :puppy_bio, placeholder: 'Bio', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.number_field :adoption_fee, id: :puppy_adoption_fee, placeholder: 'Adoption Fee', class: "form-control" %>
  </div>

  <div class="field center">
    <%= form.label :desexed %>
    <%= form.check_box :desexed, id: :puppy_desexed %>
    <%= form.label :vaccinated %>
    <%= form.check_box :vaccinated, id: :puppy_vaccinated %>
  </div>

  <div class="actions center">
    <%= form.submit class: 'btn' %>
  </div>

<% end %>
</div>
</div>
</div>
