<div class="container">
<div class="row">
<p id="notice"><%= notice %></p>

<div class="col-md-2">
  <h3>Find a pup</h3></br>
  <div class="">
    <!--Breed Tag  -->
      <%= form_tag(puppies_path, :method => "get", id:"search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "find a pup" %>
      <%= submit_tag "Search" %>
      <% end %>
  </div>

</div>

