    <div class="row center">
      <p><h1>AVAILABLE DOGS<h1></p>
      </br>
    </div>
    <div class="row center">
    <% @puppies.each do |puppy| %>
      <div class="col-md-5">
      <div class="card">
      <%= link_to image_tag(puppy.image_url), puppy_path(puppy.id) %>
      <div class="card-body">
        <h4 class="card-title center"><%= puppy.name %></h4>
        <p class="text-black center">
          Age: <%= puppy.age %>
          </br>
          Gender: <%= puppy.gender %>
          </br>
          Breed: <%= puppy.breed %>
          </br></br>
          <a href="#" class="btn center">ENQUIRE</a>
          </br>
      </div>
      </div>
      </div>
    <% end %>
